{
  "private": "true",
  "name": "resor",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "files": [
    "!**.test.js",
    "src/**"
  ],
  "scripts": {
    "lint": "xo",
    "lint:fix": "xo --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "start": "noode .",
    "start:watch": "nodemon ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ozgisin/resor.git"
  },
  "author": "Sinan Eren Ã–zgiray",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ozgisin/resor/issues"
  },
  "homepage": "https://github.com/ozgisin/resor#readme",
  "dependencies": {
    "body-parser": "^1.19.1",
    "express": "^4.17.2",
    "joi": "^17.5.0",
    "mongoose": "^6.1.2"
  },
  "devDependencies": {
    "eslint-config-airbnb-base": "^15.0.0",
    "jest": "^27.4.5",
    "nodemon": "^2.0.15",
    "supertest": "^6.1.6",
    "xo": "^0.47.0"
  },
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node"
  },
  "xo": {
    "envs": [
      "node",
      "jest"
    ],
    "extends": [
      "eslint-config-airbnb-base"
    ],
    "globals": [
      "afterAll",
      "afterEach",
      "beforeAll",
      "beforeEach",
      "describe",
      "expect",
      "it",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": "2021"
    },
    "prettier": true,
    "space": true,
    "rules": {
      "indent": "off",
      "no-console": "off",
      "global-require": "off",
      "max-classes-per-file": "off",
      "unicorn/prefer-module": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/prefer-object-from-entries": "off",
      "unicorn/prefer-optional-catch-binding": "off",
      "unicorn/prefer-ternary": "off"
    }
  }
}
